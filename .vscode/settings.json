{
    "azureFunctions.deploySubpath": "functions",
    "azureFunctions.projectLanguage": "PowerShell",
    "azureFunctions.projectRuntime": "~4",
    "debug.internalConsoleOptions": "neverOpen",
    // The following will hide the storage emulation files in the editor
    "files.exclude": {
        "__**/": true,
        "__**.*": true
    },
    "terminal.integrated.profiles.linux": {
        "pwsh7": {
            "path": "/usr/bin/pwsh",
            "icon": "terminal-powershell"
        }
    },
    "terminal.integrated.defaultProfile.linux": "pwsh7"
}